{
  "app": {
  	"name": "inventory",
  	"version": "0.0.1",
    "port": 4201,
  	"default_route": "create",
  	"routes": [
    	{
        "route": "create",
        "apis": [
          "consumer.create"
        ],
        "fragments": [
          {
            "type": "form",
            "name": "Consumers",
            "api": "consumer.create",
            "fields": [
              {
                "name": "Name",
                "type": "text",
                "api_field": "name"
              },
              {
                "name": "Age",
                "type": "text",
                "api_field": "age"
              }
            ]
          }              
        ]
      },
      {
        "route": "list",
        "apis": [
          "consumer.findall"
        ],
        "fragments": [
          {
            "table": [
              {
                "rws": 10,
                "tableHeaders": [
                  "Name",
                  "Age"
                ],
                "api": "consumer.findall"
              }
            ]
          }              
        ]
      }
  	],
    "services": [
      {
        "name": "consumer",
        "url": "http://localhost:8100/api",
        "endpoints": [
          {
            "type": "POST",
            "endpoint": "create",
            "path": "/consumer"
          },
          {
            "type": "GET",
            "endpoint": "findall",
            "path": "/consumer/findall"
          }
        ]
      },
      {
        "name": "auth",
        "url": "http://localhost:8101/api",
        "endpoints": [
          {
            "type": "GET",
            "endpoint": "token",
            "path": "/auth/token"
          },
          {
            "type": "GET",
            "endpoint": "refresh",
            "path": "/auth/refresh"
          }
        ]
      }      
    ]
  }
} 
