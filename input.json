{
  "app": {
  	"name": "consumer",
  	"version": "0.0.1",
    "port": 4201,
  	"default_route": "create",
  	"routes": [
    	{
        "route": "create",
        "apis": [
          "consumer.create"
        ]
      },
      {
        "route": "list",
        "apis": [
          "consumer.findall"
        ]
      }
  	],
    "services": [
      {
        "name": "consumer",
        "url": "http://localhost:8100/api",
        "endpoints": [
          {
            "type": "POST",
            "endpoint": "create",
            "path": "/consumer"
          },
          {
            "type": "GET",
            "endpoint": "findall",
            "path": "/consumer/findall"
          }
        ]
      },
      {
        "name": "auth",
        "url": "http://localhost:8101/api",
        "endpoints": [
          {
            "type": "GET",
            "endpoint": "token",
            "path": "/auth/token"
          },
          {
            "type": "GET",
            "endpoint": "refresh",
            "path": "/auth/refresh"
          }
        ]
      }      
    ]
  }
}
